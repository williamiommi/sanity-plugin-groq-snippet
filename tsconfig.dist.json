{
  "extends": "./tsconfig.settings",
  "include": ["./src"],
  "exclude": [
    "./src/**/__fixtures__",
    "./src/**/__mocks__",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "types": [
      "node",
      "vitest",
      "vitest/globals",
      "@testing-library/react",
      "@testing-library/user-event",
      "@testing-library/jest-dom"
    ]
  }
}
